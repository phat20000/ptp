@model IEnumerable<TCS2010NX.Models.Topic>

@{
    ViewData["Title"] = "Index";
}
<link href="~/Styletopic.css" rel="stylesheet" />
<div class="container">

    <h1>Topic</h1>
    <div class="title">
        @Html.DisplayNameFor(model => model.Title)

        @Html.DisplayNameFor(model => model.Deadline_1)

        </div>
  
    <div class="main_topic" -item>
        @foreach (var item in Model)
        {
            <div class="main_topic-item">
                <div class="main_topic-out">
                    <div class="item_img">
                        <img src="~/images/homeexam.jpg" />
                    </div>
                    <div class="item_content">
                        <div class=" title">
                            @Html.DisplayFor(modelItem => item.Title)

                            @Html.DisplayFor(modelItem => item.Deadline_1)

                        </div>

                        <div class="item_content-edit">
                            <a asp-action="Details" asp-route-id="@item.Id">Detail</a>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

  

@model IEnumerable<TCS2010NX.Models.Contribution>

@{
    ViewData["Title"] = "Index";
}
<link href="~/topic1css.css" rel="stylesheet" />

<div class="topic">
    <h1>Contributions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contributor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topic)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contributor.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Topic.Id)
                    </td>
                    <td>
                      
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                  
                    </td>
                </tr>

            }
        </tbody>

    </table>
    <a asp-action="DownloadApprovedFile" asp-route-topicId="@ViewBag.TopicId">Download</a>

</div>